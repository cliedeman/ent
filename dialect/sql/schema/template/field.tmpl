{{- define "field" -}}
    field.{{ $.FieldType }}("{{ $.Name }}")
        {{- if .Column.Default -}}.Default({{ .Column.Default }}).{{- end -}}
        {{- if .Optional }}.Optional(){{- end -}}
        {{- if .Column.Nullable }}.Nillable(){{- end -}}
        {{- if .Column.Unique }}.Unique(){{- end -}}
        {{- if .HasSchemaType -}}.SchemaType({{ .SchemaType }}){{- end -}}
        {{- if .StorageKey -}}.StorageKey("{{ .StorageKey }}"){{- end -}},
{{- end }}